extends layout

block content
  .header
    .search
      input.search__input
      .search__result
    .sign-in.sign-in--active Sign in
    .sign-out Sign Out
    .current-user-info
    .friendrequest-toggle Friend requests
      .friendrequest-badge
    .friendrequest-list
  .content
    .friend-popover(
      data-user-id = ""
    )
      .friend-popover__triangle
      .friend-popover__content
        .friend-popover__nickname
        .friend-popover__buttons
          button.button.button--message(
            data-behavior="message"
          ) Message
          button.button.button--remove-friend(
            data-behavior="remove"
          ) Remove
    .friend-list
    .room-list
    .chat(
      data-room-id=""
    )
      .chat__header
        .chat__room-info
          .chat__room-name
          .chat__room-detail
            .chat__user-icon
              i.fas.fa-user
            .chat__user-number
        .chat__room-option
          button.button.button--invite-user Invite
          button.button.button--leave-room Leave
      .chat__body
      .chat__footer
        form.chat__form(action="/")
          input.chat__input
  .auth-modal
    .auth-modal__dialog
      .auth-modal__content-container
        .auth-modal__content
          .auth-modal__header
            .auth-modal__title Sign In
          .auth-modal__body
            form.form.form--sign-in
              .form__member
                input.form__input(
                  type="text"
                  name="email"
                  placeholder="email"
                  required
                )
              .form__member
                input.form__input(
                  type="password"
                  name="password"
                  placeholder="password"
                  required
                )
              button.button.button--submit(type="submit") Sign in
          .auth-modal__content-slider.auth-modal__content-slider--next Sign up #{'>'}
        .auth-modal__content
          .auth-modal__header
            .auth-modal__title Sign Up
          .auth-modal__body
            form.form.form--sign-up
              .form__member
                input.form__input(
                  type="text"
                  name="email"
                  placeholder="email"
                  required
                )
              .form__member
                input.form__input(
                  type="password"
                  name="password"
                  placeholder="password"
                  required
                )
              .form__member
                input.form__input(
                  type="text"
                  name="nickname"
                  placeholder="nickname"
                  required
                )
              button.button.button--submit(type="submit") Sign up
          .auth-modal__content-slider.auth-modal__content-slider--back #{'<'} Sign in
  .modal.modal--user-select
    .modal__dialog
      .modal__content.user-select
        .user-select__header Select User
        .user-select__selected-user-list
        .user-select__user-list
        .user-select__footer
          button.user-select__confirm-button.button confirm